= form_for @book do |f|
  - if @book.errors.any?
    #error_explanation
      %h2= "#{pluralize(@book.errors.count, "error")} prohibited this category from being saved:"
      %ul
        - @book.errors.full_messages.each do |msg|
          %li= msg
  .field
    = f.label :category
    = f.collection_select :category_id, Category.all, :id, :name

  .field
    = f.label :author
    = f.text_field :author

  .field
    = f.label :title
    = f.text_field :title

  .field
    = f.label :description
    = f.text_area :description

  .field
    = f.label :publish_date
    = f.date_select :publish_date

  .actions
    = f.submit 'Save'
